#!/usr/bin/env sh
npx lint-staged || {
    echo "‚ùå lint-staged fall√≥ o no hay archivos staged";
    exit 1;
}

# Mostrar archivos que quedaron fuera del commit
FILES=$(git diff --name-only --diff-filter=M)
if [ -n "$FILES" ]; then
    echo "‚ö†Ô∏è  Los siguientes archivos fueron corregidos pero no se agregaron al commit:"
    echo "$FILES"
    echo "üëâ Por favor haz: git add . && git commit -m '...' nuevamente"
    exit 1
fi